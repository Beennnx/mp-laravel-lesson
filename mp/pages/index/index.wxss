/* pages/index/index.wxss */
.container {
  background-color: #f1f5f7;
}
.slide-image {
  width: 100%;
  height: 100%;
}

.notice {
  display: flex;
  width: 100%;
  height: 60rpx;
  flex-wrap: nowrap;
  background-color: #fff;
  margin-top: 15rpx;
  align-items: center;
}

.notice-img {
  width:5%;
  height: 80%; 
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.notice-title {
  width: 22%;
  font-size: 15px;
}

.notice-content {
  width: auto;
  font-size: 15px;
}

.list {
  width:100%;
  height: 100%;
}

.list-item {
  display: flex;
  width:100%;
  height: 100%;
  flex-wrap: nowrap;
}

.list-item-img {
  width:35%;
  height:180rpx;
  margin: 10rpx 5rpx 10rpx 10rpx;
}

.list-item-right {
  display: flex;
  width:auto;
  height: 100%;
  flex-wrap: wrap;
  flex-direction: column;
  margin: 10rpx 5rpx 10rpx 10rpx;
}

.list-item-title {
  font-size: 18px;
  align-self:center;
}

.list-item-content {
  font-size: 15px;
  color: #d3d3d3; 
  margin-top: 10rpx; 
}

.list-item-foot {
  font-size: 12px;
  align-self: flex-end;
  margin-top: 10rpx;
}

.line {
  border: 1px solid #f1f5f7;
}